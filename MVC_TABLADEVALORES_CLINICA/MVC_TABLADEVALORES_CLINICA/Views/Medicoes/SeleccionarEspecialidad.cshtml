@{
    ViewData["Title"] = "Seleccionar Especialidad";
}

<h2>@ViewData["Title"]</h2>

<p>Por favor, seleccione una especialidad para ver los médicos asociados.</p>

<form asp-controller="Medicoes" asp-action="PorEspecialidad" method="get">
    <div class="form-group">
        <label for="especialidadId">Especialidades:</label>
        <select name="especialidadId" id="especialidadId" class="form-control" asp-items="ViewBag.Especialidades" required style="margin-top:5px;">
        </select>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Ver Médicos</button>
</form>
<a asp-action="Index">Retorna a la Tabla de Contenido</a>

