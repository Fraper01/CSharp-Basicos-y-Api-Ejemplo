@using WebApi_Clinica.Shared.Dtos
@model EspecialidadDto

<h2 style="text-align:center">
    @ViewBag.titulo
</h2>

@{
    ViewData["Title"] = "Especialidades";
}

<h3>Esta Usted Seguro que Desea Eliminar Este Registro de Especialidad.?</h3>
<a asp-action="Index">Retorna a la Tabla de Contenido</a>
<div class="rectangle-container">
    <h4>Especialidad</h4>
    <hr />
    <div class="container">
        <form method="post" asp-action="EliminarEspecialidad" asp-controller="Especialidades" asp-route-id="@Model.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-4">
                    <strong>Nombres:</strong>
                </div>
                <div class="col-6">
                    @Model.Nombre
                </div>
            </div>
            <button type="submit" class="btn btn-danger" style="margin-top:10px;">ELIMINAR</button>
        </form>
    </div>
    <hr />
    <div>
        <a asp-action="Index">Retorna a la Tabla de Contenido</a>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


  




