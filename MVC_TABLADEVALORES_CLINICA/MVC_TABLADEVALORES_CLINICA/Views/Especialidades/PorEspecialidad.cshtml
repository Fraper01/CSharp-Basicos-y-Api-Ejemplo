@using MVC_TABLADEVALORES_CLINICA.Models.Entities
@using WebApi_Clinica.Shared.Dtos
@model List<MedicoDto>

@{
    ViewData["Title"] = "Medicos por Especialidad";
}

<h2 style="text-align:center">
    @ViewBag.titulo
</h2>

<h2>@ViewBag.Especialidad</h2>

@if (Model != null && Model.Any())
{
    <a asp-action="Index">Retorna a la Tabla de Contenido</a>
        <div style="height: 95%; overflow-y: auto; overflow-x: auto; border: 1px solid; width: 100%;">
            <table class="table" style="table-layout: fixed; width: 100%; height: 100%;">
                <thead>
                    <tr>
                        <th class="sticky-header-c" style="width: 05%;">Número de Colegiado</th>
                        <th class="sticky-header-l" style="width: 20%;">Nombres</th>
                        <th class="sticky-header-l" style="width: 20%;">Apellidos</th>
                        <th class="sticky-header-r" style="width: 08%;">Descripción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var medico in Model)
                    {
                        <tr>
                            <td style="text-align:right; width: 02px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">@medico.NumeroColegiado</td>
                            <td style="width: 05px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">@medico.Nombre</td>
                            <td style="width: 05px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">@medico.Apellido</td>
                            <td style="text-align:right; width: 02px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">@medico.Descripcion</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <a asp-action="Index">Retorna a la Tabla de Contenido</a>
}
else
{
    <p>No hay médicos para esta especialidad.</p>
    <a asp-action="Index">Retorna a la Tabla de Contenido</a>
}

